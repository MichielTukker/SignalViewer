<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SignalViewer.ViewModels"

             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SignalViewer.Views.ProjectView">
    <Design.DataContext>
        <vm:ProjectViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="auto,*">
        <Grid ColumnDefinitions="Auto,Auto">
            <Button Grid.Column="0" Name="buttonOpenFile" Command="{Binding OpenFileCommand}">Open File...</Button>
            <Button Grid.Column="1" Name="buttonOpenFolder" Command="{Binding OpenFolderCommand}">Open Folder...</Button>
        </Grid>

        <TreeView Grid.Row='1' ItemsSource="{Binding Items}" 
                  HorizontalAlignment="Left">
            <TreeView.ItemTemplate>
                <TreeDataTemplate ItemsSource="{Binding ProjectSubItems}">
                    <TextBlock Text="{Binding NodeText}"/>
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

    </Grid>
</UserControl>
