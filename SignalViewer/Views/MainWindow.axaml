<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SignalViewer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:SignalViewer.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SignalViewer.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SignalViewer">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="1*,3,5*" RowDefinitions="*"  Margin="4">
        
        <uc:ProjectView Grid.Column="0" DataContext="{Binding ProjectView}"/>

        <GridSplitter Grid.Column="1" Background="Black" ResizeDirection="Columns"/>
        <uc:MeasurementView Grid.Column="2" DataContext="{Binding MeasurementDisplay}"></uc:MeasurementView>
        
    </Grid>
</Window>