        <!--           IsVisible="True" -->
        <!--           Margin="12" -->
        <!--           Items="{Binding Data}"> -->
        <!--     <ItemsRepeater Items="{Binding _measurement.Columns}"> -->
        <!--          -->
        <!--     </ItemsRepeater> -->
        <!--      -->
        <!-- </DataGrid> -->

    </Grid>
</Window>